---
import Layout from "../layouts/LayoutUsers.astro";
import logo from "../assets/Logo.png";
import { Image } from "astro:assets";
---

<Layout title="Registro - Vinyl Void">
    <section class="bg-[#1A1A1A] min-h-screen flex items-center justify-center px-4 py-12 relative overflow-hidden">
        
        <!-- Efectos de fondo decorativos -->
        <div class="absolute inset-0 overflow-hidden pointer-events-none">
            <div class="absolute top-20 left-10 w-72 h-72 bg-white/5 rounded-full blur-3xl"></div>
            <div class="absolute bottom-20 right-10 w-96 h-96 bg-white/5 rounded-full blur-3xl"></div>
            <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-white/3 rounded-full blur-3xl"></div>
        </div>

        <!-- Patrón de vinilos de fondo -->
        <div class="absolute inset-0 opacity-5">
            <div class="absolute top-10 left-20 w-32 h-32 border-4 border-white rounded-full"></div>
            <div class="absolute top-40 right-32 w-24 h-24 border-4 border-white rounded-full"></div>
            <div class="absolute bottom-32 left-40 w-40 h-40 border-4 border-white rounded-full"></div>
            <div class="absolute bottom-20 right-20 w-28 h-28 border-4 border-white rounded-full"></div>
        </div>

        <div class="w-full max-w-6xl flex flex-col lg:flex-row items-center gap-12 relative z-10">
            
            <!-- Panel izquierdo - Bienvenida -->
            <div class="hidden lg:flex flex-1 flex-col justify-center text-white space-y-6">
                <div class="space-y-4">
                    <div class="flex items-center space-x-3 mb-6">
                        <a href="/" class="flex items-center space-x-2 flex-shrink-0">
                            <Image src={logo} alt="logo" class="h-16 w-16" format="png"/>
                            <p class="text-5xl font-bold text-white">Vinyl Void</p>
                        </a>
                    </div>
                    
                    <h2 class="text-4xl font-bold leading-tight">
                        Únete a la comunidad de amantes del vinilo
                        </span>
                    </h2>
                    
                    <p class="text-gray-400 text-lg leading-relaxed">
                        Crea tu cuenta y comienza a construir tu colección personal 
                        de música en vinilo.
                    </p>
                </div>

                <!-- Features -->
                <div class="space-y-4 mt-8">
                    <div class="flex items-start space-x-3">
                        <div class="flex-shrink-0 w-10 h-10 bg-white/10 rounded-lg flex items-center justify-center">
                            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-semibold text-white">Registro rápido</h3>
                            <p class="text-gray-400 text-sm">Crea tu cuenta en menos de 2 minutos</p>
                        </div>
                    </div>

                    <div class="flex items-start space-x-3">
                        <div class="flex-shrink-0 w-10 h-10 bg-white/10 rounded-lg flex items-center justify-center">
                            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-semibold text-white">100% seguro</h3>
                            <p class="text-gray-400 text-sm">Tus datos están protegidos y encriptados</p>
                        </div>
                    </div>

                    <div class="flex items-start space-x-3">
                        <div class="flex-shrink-0 w-10 h-10 bg-white/10 rounded-lg flex items-center justify-center">
                            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5"></path>
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-semibold text-white">Acceso completo</h3>
                            <p class="text-gray-400 text-sm">Disfruta de todas las funcionalidades</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Panel derecho - Formulario -->
            <div class="w-full lg:w-[450px] flex-shrink-0">
                <!-- Logo móvil -->
                <div class="lg:hidden flex flex-col items-center mb-8">
                    <Image src={logo} alt="logo" class="h-20 w-20 mb-4" format="png" />
                    <h1 class="text-white text-4xl font-bold text-center mb-2">Vinyl Void</h1>
                    <p class="text-gray-400 text-center">
                        Únete a la comunidad de amantes del vinilo.
                    </p>
                </div>

                <!-- Contenedor del formulario -->
                <div class="bg-gradient-to-br from-zinc-900 to-black border border-zinc-800 rounded-2xl shadow-2xl p-8 backdrop-blur-sm">
                    
                    <div class="mb-8">
                        <h2 class="text-2xl font-bold text-white mb-2">Crear Cuenta</h2>
                        <p class="text-gray-400 text-sm">Completa tus datos para registrarte</p>
                    </div>

                    <!-- Mensajes de error/éxito -->
                    <div id="message" class="hidden mb-4 p-3 rounded text-sm"></div>

                    <!-- Formulario de registro -->
                    <form id="registerForm" class="space-y-4">
                        <!-- Nombre y Apellido en fila -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <!-- Nombre -->
                            <div>
                                <label for="name" class="block text-sm font-medium text-gray-300 mb-2">
                                    Nombre
                                </label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <svg class="h-5 w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                        </svg>
                                    </div>
                                    <input
                                        type="text"
                                        id="name"
                                        name="name"
                                        required
                                        class="w-full pl-10 pr-4 py-3 bg-zinc-800/50 border border-zinc-700 text-white rounded-lg focus:ring-2 focus:ring-zinc-600 focus:border-transparent outline-none transition placeholder-gray-500"
                                        placeholder="Juan"
                                    />
                                </div>
                            </div>

                            <!-- Apellido -->
                            <div>
                                <label for="lastname" class="block text-sm font-medium text-gray-300 mb-2">
                                    Apellido
                                </label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <svg class="h-5 w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                        </svg>
                                    </div>
                                    <input
                                        type="text"
                                        id="lastname"
                                        name="lastname"
                                        required
                                        class="w-full pl-10 pr-4 py-3 bg-zinc-800/50 border border-zinc-700 text-white rounded-lg focus:ring-2 focus:ring-zinc-600 focus:border-transparent outline-none transition placeholder-gray-500"
                                        placeholder="Pérez"
                                    />
                                </div>
                            </div>
                        </div>

                        <!-- DNI y Teléfono en fila -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <!-- DNI -->
                            <div>
                                <label for="dni" class="block text-sm font-medium text-gray-300 mb-2">
                                    DNI <span class="text-gray-500">(opcional)</span>
                                </label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <svg class="h-5 w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V8a2 2 0 00-2-2h-5m-4 0V5a2 2 0 114 0v1m-4 0a2 2 0 104 0m-5 8a2 2 0 100-4 2 2 0 000 4zm0 0c1.306 0 2.417.835 2.83 2M9 14a3.001 3.001 0 00-2.83 2M15 11h3m-3 4h2"></path>
                                        </svg>
                                    </div>
                                    <input
                                        type="text"
                                        id="dni"
                                        name="dni"
                                        class="w-full pl-10 pr-4 py-3 bg-zinc-800/50 border border-zinc-700 text-white rounded-lg focus:ring-2 focus:ring-zinc-600 focus:border-transparent outline-none transition placeholder-gray-500"
                                        placeholder="12345678"
                                    />
                                </div>
                            </div>

                            <!-- Teléfono -->
                            <div>
                                <label for="phone" class="block text-sm font-medium text-gray-300 mb-2">
                                    Teléfono <span class="text-gray-500">(opcional)</span>
                                </label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <svg class="h-5 w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                                        </svg>
                                    </div>
                                    <input
                                        type="tel"
                                        id="phone"
                                        name="phone"
                                        class="w-full pl-10 pr-4 py-3 bg-zinc-800/50 border border-zinc-700 text-white rounded-lg focus:ring-2 focus:ring-zinc-600 focus:border-transparent outline-none transition placeholder-gray-500"
                                        placeholder="999 999 999"
                                    />
                                </div>
                            </div>
                        </div>

                        <!-- Email -->
                        <div>
                            <label for="email" class="block text-sm font-medium text-gray-300 mb-2">
                                Email
                            </label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <svg class="h-5 w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
                                    </svg>
                                </div>
                                <input
                                    type="email"
                                    id="email"
                                    name="email"
                                    required
                                    class="w-full pl-10 pr-4 py-3 bg-zinc-800/50 border border-zinc-700 text-white rounded-lg focus:ring-2 focus:ring-zinc-600 focus:border-transparent outline-none transition placeholder-gray-500"
                                    placeholder="tu@email.com"
                                />
                            </div>
                        </div>

                        <!-- Dirección -->
                        <div>
                            <label for="address" class="block text-sm font-medium text-gray-300 mb-2">
                                Dirección <span class="text-gray-500">(opcional)</span>
                            </label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <svg class="h-5 w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    </svg>
                                </div>
                                <input
                                    type="text"
                                    id="address"
                                    name="address"
                                    class="w-full pl-10 pr-4 py-3 bg-zinc-800/50 border border-zinc-700 text-white rounded-lg focus:ring-2 focus:ring-zinc-600 focus:border-transparent outline-none transition placeholder-gray-500"
                                    placeholder="Av. Principal 123"
                                />
                            </div>
                        </div>

                        <!-- Password -->
                        <div>
                            <label for="password" class="block text-sm font-medium text-gray-300 mb-2">
                                Contraseña
                            </label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <svg class="h-5 w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                                    </svg>
                                </div>
                                <input
                                    type="password"
                                    id="password"
                                    name="password"
                                    required
                                    minlength="8"
                                    class="w-full pl-10 pr-4 py-3 bg-zinc-800/50 border border-zinc-700 text-white rounded-lg focus:ring-2 focus:ring-zinc-600 focus:border-transparent outline-none transition placeholder-gray-500"
                                    placeholder="Mínimo 8 caracteres"
                                />
                            </div>
                        </div>

                        <!-- Confirmar Password -->
                        <div>
                            <label for="confirmPassword" class="block text-sm font-medium text-gray-300 mb-2">
                                Confirmar contraseña
                            </label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <svg class="h-5 w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                </div>
                                <input
                                    type="password"
                                    id="confirmPassword"
                                    name="confirmPassword"
                                    required
                                    minlength="8"
                                    class="w-full pl-10 pr-4 py-3 bg-zinc-800/50 border border-zinc-700 text-white rounded-lg focus:ring-2 focus:ring-zinc-600 focus:border-transparent outline-none transition placeholder-gray-500"
                                    placeholder="Repite tu contraseña"
                                />
                            </div>
                        </div>

                        <!-- Términos y condiciones -->
                        <div class="flex items-start space-x-2">
                            <input 
                                type="checkbox" 
                                id="terms" 
                                required
                                class="w-4 h-4 mt-1 text-zinc-600 bg-zinc-800 border-zinc-700 rounded focus:ring-zinc-600 focus:ring-2"
                            />
                            <label for="terms" class="text-sm text-gray-400">
                                Acepto los 
                                <a href="/terms" class="text-white hover:text-gray-300 transition">Términos de Servicio</a> 
                                y la 
                                <a href="/privacy" class="text-white hover:text-gray-300 transition">Política de Privacidad</a>
                            </label>
                        </div>

                        <!-- Botón submit -->
                        <button
                            type="submit"
                            id="submitBtn"
                            class="w-full bg-white hover:bg-gray-100 text-black py-3 rounded-lg transition-all font-semibold shadow-lg hover:shadow-white/20 transform hover:scale-[1.02] active:scale-[0.98]"
                        >
                            Crear Cuenta
                        </button>
                    </form>

                    <!-- Link a login -->
                    <p class="text-center mt-6 text-sm text-gray-400">
                        ¿Ya tienes cuenta?
                        <a href="/login" class="text-white hover:text-gray-300 transition-colors font-medium ml-1">
                            Inicia sesión aquí
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </section>
</Layout>

<script is:inline>
document.addEventListener("DOMContentLoaded", () => {

  const form = document.getElementById("registerForm");
  const messageBox = document.getElementById("message");
  const submitBtn = document.getElementById("submitBtn");

  function showMessage(text, type = "error") {
    messageBox.textContent = text;
    messageBox.classList.remove("hidden");

    if (type === "error") {
      messageBox.classList.remove("bg-green-500/20", "text-green-300");
      messageBox.classList.add("bg-red-500/20", "text-red-300", "border", "border-red-500/40");
    } else {
      messageBox.classList.remove("bg-red-500/20", "text-red-300");
      messageBox.classList.add("bg-green-500/20", "text-green-300", "border", "border-green-500/40");
    }
  }

  form.addEventListener("submit", async (e) => {
    e.preventDefault();

    const password = document.getElementById("password").value.trim();
    const confirmPassword = document.getElementById("confirmPassword").value.trim();

    if (password !== confirmPassword) {
      showMessage("Las contraseñas no coinciden", "error");
      return;
    }

    submitBtn.disabled = true;
    submitBtn.textContent = "Registrando...";

    const formData = {
      name: document.getElementById("name").value.trim(),
      lastname: document.getElementById("lastname").value.trim(),
      dni: document.getElementById("dni").value.trim(),
      phone: document.getElementById("phone").value.trim(),
      email: document.getElementById("email").value.trim(),
      address: document.getElementById("address").value.trim(),
      password: password
    };

    try {
    const response = await fetch("/api/auth/register", {
        method: "POST",
        headers: {"Content-Type": "application/json",},
        body: JSON.stringify(formData),
    });

    const data = await response.json();
    
    console.log("Response status:", response.status);
    console.log("Response data:", data);

    if (!response.ok) {
        showMessage(data.message || "Error al registrar usuario");
        submitBtn.disabled = false;
        submitBtn.textContent = "Crear Cuenta";
        return;
    }

    showMessage("Cuenta creada exitosamente", "success");

    setTimeout(() => {
        window.location.href = "/login";
    }, 1500);

    } catch (error) {
    console.error("Error completo:", error);
    showMessage("Error de conexión con el servidor", "error");
    submitBtn.disabled = false;
    submitBtn.textContent = "Crear Cuenta";
    }
  });

});
</script>