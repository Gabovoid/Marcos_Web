---
import Layout from "../layouts/LayoutUsers.astro";
import logo from "../assets/Logo.png";
import { Image } from 'astro:assets';
---
<Layout title="Login - Vinyl Void">
    <section class="bg-[#1A1A1A] min-h-screen flex items-center justify-center px-4 py-12 relative overflow-hidden">
        
        <!-- Efectos de fondo decorativos -->
        <div class="absolute inset-0 overflow-hidden pointer-events-none">
            <div class="absolute top-20 left-10 w-72 h-72 bg-white/5 rounded-full blur-3xl"></div>
            <div class="absolute bottom-20 right-10 w-96 h-96 bg-white/5 rounded-full blur-3xl"></div>
            <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-white/3 rounded-full blur-3xl"></div>
        </div>

        <!-- Patrón de vinilos de fondo -->
        <div class="absolute inset-0 opacity-5">
            <div class="absolute top-10 left-20 w-32 h-32 border-4 border-white rounded-full"></div>
            <div class="absolute top-40 right-32 w-24 h-24 border-4 border-white rounded-full"></div>
            <div class="absolute bottom-32 left-40 w-40 h-40 border-4 border-white rounded-full"></div>
            <div class="absolute bottom-20 right-20 w-28 h-28 border-4 border-white rounded-full"></div>
        </div>

        <div class="w-full max-w-6xl flex flex-col lg:flex-row items-center gap-12 relative z-10">
            
            <!-- Panel izquierdo - Bienvenida -->
            <div class="hidden lg:flex flex-1 flex-col justify-center text-white space-y-6">
                <div class="space-y-4">
                    <div class="flex items-center space-x-3 mb-6">
                        <a href="/" class="flex items-center space-x-2 flex-shrink-0">
                            <Image src={logo} alt="logo" class="h-16 w-16" format="png"/>
                            <p class="text-5xl font-bold text-white">Vinyl Void</p>
                        </a>
                    </div>
                    
                    <h2 class="text-4xl font-bold leading-tight">
                        Bienvenido de vuelta a tu
                        <span class="text-gray-400">
                            colección musical
                        </span>
                    </h2>
                    
                    <p class="text-gray-400 text-lg leading-relaxed">
                        Descubre, colecciona y disfruta de la mejor música en vinilo. 
                        Tu catálogo personal te está esperando.
                    </p>
                </div>

                <!-- Features -->
                <div class="space-y-4 mt-8">
                    <div class="flex items-start space-x-3">
                        <div class="flex-shrink-0 w-10 h-10 bg-white/10 rounded-lg flex items-center justify-center">
                            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-semibold text-white">Catálogo ilimitado</h3>
                            <p class="text-gray-400 text-sm">Miles de vinilos a tu disposición</p>
                        </div>
                    </div>

                    <div class="flex items-start space-x-3">
                        <div class="flex-shrink-0 w-10 h-10 bg-white/10 rounded-lg flex items-center justify-center">
                            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-semibold text-white">Colecciones personalizadas</h3>
                            <p class="text-gray-400 text-sm">Organiza tu música a tu manera</p>
                        </div>
                    </div>

                    <div class="flex items-start space-x-3">
                        <div class="flex-shrink-0 w-10 h-10 bg-white/10 rounded-lg flex items-center justify-center">
                            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-semibold text-white">Comunidad activa</h3>
                            <p class="text-gray-400 text-sm">Conecta con otros coleccionistas</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Panel derecho - Formulario -->
            <div class="w-full lg:w-[450px] flex-shrink-0">
                <!-- Logo móvil -->
                <div class="lg:hidden flex flex-col items-center mb-8">
                    <Image src={logo} alt="logo" class="h-20 w-20 mb-4" format="png" />
                    <h1 class="text-white text-4xl font-bold text-center mb-2">Vinyl Void</h1>
                    <p class="text-gray-400 text-center">
                        Inicia sesión y disfruta de la mejor música en vinilo.
                    </p>
                </div>

                <!-- Contenedor del formulario -->
                <div class="bg-gradient-to-br from-zinc-900 to-black border border-zinc-800 rounded-2xl shadow-2xl p-8 backdrop-blur-sm">
                    
                    <div class="mb-8">
                        <h2 class="text-2xl font-bold text-white mb-2">Iniciar Sesión</h2>
                        <p class="text-gray-400 text-sm">Ingresa tus credenciales para continuar</p>
                    </div>

                    <!-- Mensajes de error/éxito -->
                    <div id="message" class="hidden mb-4 p-3 rounded text-sm"></div>

                    <!-- Formulario de login -->
                    <form id="loginForm" class="space-y-5">
                        <!-- Email -->
                        <div>
                            <label for="email" class="block text-sm font-medium text-gray-300 mb-2">
                                Email
                            </label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <svg class="h-5 w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
                                    </svg>
                                </div>
                                <input
                                    type="email"
                                    id="email"
                                    name="email"
                                    required
                                    class="w-full pl-10 pr-4 py-3 bg-zinc-800/50 border border-zinc-700 text-white rounded-lg focus:ring-2 focus:ring-zinc-600 focus:border-transparent outline-none transition placeholder-gray-500"
                                    placeholder="tu@email.com"
                                />
                            </div>
                        </div>

                        <!-- Password -->
                        <div>
                            <label for="password" class="block text-sm font-medium text-gray-300 mb-2">
                                Contraseña
                            </label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <svg class="h-5 w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                                    </svg>
                                </div>
                                <input
                                    type="password"
                                    id="password"
                                    name="password"
                                    required
                                    class="w-full pl-10 pr-4 py-3 bg-zinc-800/50 border border-zinc-700 text-white rounded-lg focus:ring-2 focus:ring-zinc-600 focus:border-transparent outline-none transition placeholder-gray-500"
                                    placeholder="••••••••"
                                />
                            </div>
                        </div>

                        <!-- Recordarme / Olvidé contraseña -->
                        <div class="flex items-center justify-between text-sm">
                            <label class="flex items-center text-gray-400 cursor-pointer hover:text-gray-300 transition">
                                <input type="checkbox" class="w-4 h-4 text-zinc-600 bg-zinc-800 border-zinc-700 rounded focus:ring-zinc-600 focus:ring-2">
                                <span class="ml-2">Recordarme</span>
                            </label>
                            
                        </div>

                        <!-- Botón submit -->
                        <button
                            type="submit"
                            id="submitBtn"
                            class="w-full bg-white hover:bg-gray-100 text-black py-3 rounded-lg transition-all font-semibold shadow-lg hover:shadow-white/20 transform hover:scale-[1.02] active:scale-[0.98]"
                        >
                            Iniciar Sesión
                        </button>
                    </form>

                    <!-- Link a registro -->
                    <p class="text-center mt-6 text-sm text-gray-400">
                        ¿No tienes cuenta?
                        <a href="/register" class="text-white hover:text-gray-300 transition-colors font-medium ml-1">
                            Regístrate aquí
                        </a>
                    </p>
                </div>

                <!-- Info adicional -->
                <p class="text-center mt-6 text-xs text-gray-500">
                    Al iniciar sesión, aceptas nuestros 
                    <a href="/terms" class="text-gray-400 hover:text-white transition">Términos de Servicio</a> y 
                    <a href="/privacy" class="text-gray-400 hover:text-white transition">Política de Privacidad</a>
                </p>
            </div>
        </div>
    </section>
</Layout>

<script>
import { supabase } from '../lib/supabase';

document.addEventListener("DOMContentLoaded", () => {
  const form = document.getElementById("loginForm") as HTMLFormElement;
  const messageBox = document.getElementById("message") as HTMLDivElement;
  const submitBtn = document.getElementById("submitBtn") as HTMLButtonElement;

  function showMessage(text: string, type: string = "error") {
    messageBox.textContent = text;
    messageBox.classList.remove("hidden");

    if (type === "error") {
      messageBox.classList.remove("bg-green-500/20", "text-green-300", "border-green-500/40");
      messageBox.classList.add("bg-red-500/20", "text-red-300", "border", "border-red-500/40");
    } else {
      messageBox.classList.remove("bg-red-500/20", "text-red-300", "border-red-500/40");
      messageBox.classList.add("bg-green-500/20", "text-green-300", "border", "border-green-500/40");
    }
  }

  form.addEventListener("submit", async (e) => {
    e.preventDefault();

    submitBtn.disabled = true;
    submitBtn.textContent = "Iniciando sesión...";

    const formData = {
      email: (document.getElementById("email") as HTMLInputElement).value.trim(),
      password: (document.getElementById("password") as HTMLInputElement).value.trim(),
    };

    try {
      const response = await fetch("/api/auth/login", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(formData),
      });

      const data = await response.json();

      if (!response.ok) {
        showMessage(data.message || "Error al iniciar sesión");
        submitBtn.disabled = false;
        submitBtn.textContent = "Iniciar Sesión";
        return;
      }

      // ✅ CAMBIO CRÍTICO: Establecer la sesión en Supabase client
      if (data.session) {
        const { error } = await supabase.auth.setSession({
          access_token: data.session.access_token,
          refresh_token: data.session.refresh_token,
        });

        if (error) {
          console.error('Error al establecer sesión:', error);
          showMessage("Error al establecer la sesión");
          submitBtn.disabled = false;
          submitBtn.textContent = "Iniciar Sesión";
          return;
        }
      }

      showMessage("Inicio de sesión exitoso", "success");

      // Redirigir según el parámetro redirect o ir al inicio
      const urlParams = new URLSearchParams(window.location.search);
      const redirect = urlParams.get('redirect') || '/';
      
      setTimeout(() => {
        window.location.href = redirect;
      }, 1000);

    } catch (error) {
      console.error('Error:', error);
      showMessage("Error de conexión con el servidor", "error");
      submitBtn.disabled = false;
      submitBtn.textContent = "Iniciar Sesión";
    }
  });
});
</script>