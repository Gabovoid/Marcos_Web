---
import Layout from "../../layouts/Layout.astro";
import { vinilos } from "../../data/vinilos.js";
import RImage from "../../pages/productos/RImage.astro";
---

<div class=" mt-[80px] mb-[50px] max-w-7xl mx-auto px-4 sm:px-6 lg:px-12 py-8">
  <h1 class="text-2xl sm:text-3xl text-white font-bold mb-6 text-center sm:text-left">
    CATÁLOGO DE PRODUCTOS:
  </h1>

  <div class="flex flex-col lg:flex-row gap-8">
    <!-- Sidebar filtros -->
    <aside class="w-full lg:w-64 bg-[#1A1A1A] p-4 rounded-lg shadow">
      <h2 class="text-lg text-white font-bold mb-4">Filtros</h2>
      <button class="mb-4 px-3 py-1 bg-gray-700 text-white rounded hover:bg-gray-600 w-full">
        Limpiar
      </button>

      <!-- Géneros con accordion -->
      <div class="border-t border-gray-700 pt-4">
        <button class="flex justify-between items-center w-full text-white font-semibold">
          <span>Géneros</span>
          <span>+</span>
        </button>

        <ul class="mt-2 pl-4 text-white space-y-2">
          <li class="cursor-pointer hover:text-gray-300">Rock</li>
          <li class="cursor-pointer hover:text-gray-300">Pop</li>
          <li class="cursor-pointer hover:text-gray-300">Soundtrack</li>
          <li class="cursor-pointer hover:text-gray-300">Rap</li>
        </ul>
      </div>

    </aside>

    <!-- Catálogo de productos -->
    <section class="flex-1">
      <!-- Ordenar -->
      <div class="flex justify-center sm:justify-end mb-6">
        <div class="flex items-center gap-2">
          <label class="text-white text-sm sm:text-base">Ordenar por:</label>
          <select id="ordenarPor" class="px-2 text-white bg-gray-700 py-1 rounded text-sm sm:text-base">
            <option value="predeterminado">Predeterminado</option>
            <option value="nombre">Nombre</option>
            <option value="precioAsc">Precio (menor a mayor)</option>
            <option value="precioDesc">Precio (mayor a menor)</option>
          </select>
        </div>
      </div>

      <!-- Grid de productos -->
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-6 sm:gap-8">
        {vinilos.map((v) => (
          <div class="block text-center transition transform hover:scale-105">
            <!-- Producto con enlace -->
            <a
              href={`/productos/${v.slug}`}
              class="block"
              aria-label={v.nombre}
            >
              <div class="relative aspect-square w-full overflow-hidden bg-black rounded-lg shadow">
                <picture>
                  <RImage
                    src={v.imagen || "/placeholder.webp"}
                    alt={v.nombre}
                    class="w-full h-full object-cover"
                    width={400}
                    height={400}
                    format="webp"
                  />
                </picture>
              </div>
              <div class="mt-2">
                <h3 class="text-sm sm:text-base text-white font-bold truncate">{v.nombre}</h3>
                <p class="text-xs sm:text-sm text-white">{v.artista}</p>
                <p class="text-sm sm:text-base text-white font-semibold mt-1">{v.precio}</p>
              </div>
            </a>
            <button class="mt-3 w-full flex items-center justify-center gap-2 bg-white hover:bg-[#4d5645] text-black hover:text-white font-semibold py-2 rounded-lg transition cursor-pointer text-sm sm:text-base">
              Agregar
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 stroke-[2]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <circle cx="8" cy="21" r="1"/>
                <circle cx="19" cy="21" r="1"/>
                <path d="M2.05 2.05h2l2.66 12.42a2 2 0 0 0 2 1.58h9.78a2 2 0 0 0 1.95-1.57l1.65-7.43H5.12"/>
              </svg>
            </button>
          </div>
        ))}
      </div>
    </section>
  </div>
</div>
