---
import { Image } from "astro:assets";
import B1 from "../../assets/B1.png";
import B2 from "../../assets/B2.png";
import B3 from "../../assets/B3.png";
---
<section class="relative w-full overflow-hidden mt-[80px] border-b border-white">
  <!-- slider principal -->
  <div
    id="slides"
    class="flex w-[300%] transition-transform duration-700 ease-in-out">
    <!--1-->
    <div class="relative w-1/3 shrink-0 aspect-[16/9] sm:aspect-[21/9]">
      <div class="absolute inset-0 bg-black"></div>
      <!-- Imagen -->
      <Image
        src={B1}
        alt="Slider1"
        class="h-full w-full object-contain sm:object-cover relative z-10"
        format="png"/>
    </div>
    <!--2-->
    <div class="relative w-1/3 shrink-0 aspect-[16/9] sm:aspect-[21/9]">
      <div
        class="absolute inset-0 bg-gradient-to-r from-black via-gray-900 to-black">
      </div>
      <!-- Imagen -->
      <Image
        src={B2}
        alt="Slider2"
        class="h-full w-full object-contain sm:object-cover relative z-10"
        format="png"/>
    </div>
    <!--2-->
    <div class="relative w-1/3 shrink-0 aspect-[16/9] sm:aspect-[21/9]">
      <div
        class="absolute inset-0 bg-gradient-to-r from-black via-gray-900 to-black">
      </div>
      <!-- Imagen -->
      <Image
        src={B3}
        alt="Slider3"
        class="h-full w-full object-contain sm:object-cover relative z-10"
        format="png"/>
    </div>
  </div>

  <!-- flechas -->
  <div class="hidden lg:flex absolute bottom-4 left-4 gap-2 z-10">
    <button id="prev" class="bg-black/40 text-white p-2 sm:p-3 cursor-pointer">‹</button>
    <button id="next" class="bg-black/40 text-white p-2 sm:p-3 cursor-pointer">›</button>
  </div>
  <!-- indicadores -->
  <div class="absolute bottom-4 left-1/2 -translate-x-1/2 flex gap-3 z-10">
    <div class="w-6 sm:w-10 h-0.5 rounded-full bg-white" id="ind1"></div>
    <div class="w-6 sm:w-10 h-0.5 rounded-full bg-white" id="ind2"></div>
    <div class="w-6 sm:w-10 h-0.5 rounded-full bg-white" id="ind3"></div>
  </div>
</section>

<script is:inline>
  const slides = document.getElementById("slides");
  const indicators = [
    document.getElementById("ind1"),
    document.getElementById("ind2"),
    document.getElementById("ind3"),
  ];
  let index = 0;
  const totalSlides = 3;

  function updateSlide() {
    slides.style.transform = `translateX(-${index *(100 / totalSlides)}%)`;
    indicators.forEach((ind, i) => {
      ind.classList.toggle("bg-black", i === index);
      ind.classList.toggle("scale-125", i === index);
    });
  }

  document.getElementById("next").addEventListener("click", () => {
    index = (index + 1) % totalSlides;
    updateSlide();
  });

  document.getElementById("prev").addEventListener("click", () => {
    index = (index - 1 + 2) % totalSlides;
    updateSlide();
  });

  setInterval(() => {
    index = (index + 1) % totalSlides;
    updateSlide();
  }, 5000);

  let startX = 0;
  let endX = 0;

  slides.addEventListener("touchstart", (e) => {
    startX = e.touches[0].clientX;
  });

  slides.addEventListener("touchend", (e) => {
    endX = e.changedTouches[0].clientX;
    handleSwipe();
  });

  function handleSwipe() {
    const deltaX = endX - startX;

    if (Math.abs(deltaX) > 50) {
      
      if (deltaX > 0) {
        index = (index - 1 + 2) % totalSlides;
      } else {

        index = (index + 1) % totalSlides;
      }
      updateSlide();
    }
  }
</script>
