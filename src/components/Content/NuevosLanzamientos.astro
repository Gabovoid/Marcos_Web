---
import { supabase } from "../../lib/supabase";
import AddToCartButton from "../Carts/AnadirCarrito";

// Obtener solo los productos nuevos
const { data: vinyls, error } = await supabase
  .from("vinyls")
  .select("*")
  .eq("type", "nuevos")
  .order("id", { ascending: true });

if (error) {
  console.error("Error al cargar nuevos:", error);
}

// Transformar datos
const products = vinyls?.map((v) => ({
  id: v.id,
  title: v.title,
  artist: v.artist,
  price: `S/ ${v.price.toFixed(2)}`,
  priceNumeric: v.price,
  image: v.img,
  slug: v.slug,
  stock: v.stock
})) || [];
---

<section class="bg-[#1A1A1A] text-white py-25 relative">
  <h2 class="text-center text-2xl font-bold font-sans mb-6">RECIÃ‰N LLEGADOS</h2>

  {products.length > 0 ? (
    <>
      <!-- Botones solo visibles en lg -->
      <div class="hidden lg:block lg:absolute left-0 -translate-y-1 z-10">
        <button id="btn-leftNL" class="bg-[#161616] py-42 px-27 text-xl hover:bg-white hover:text-black transition disabled:opacity-40 cursor-pointer">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m12 19-7-7 7-7"/>
            <path d="M19 12H5"/>
          </svg>
        </button>
      </div>

      <div class="hidden lg:block lg:absolute right-0 -translate-y-1 z-10">
        <button id="btn-rightNL" class="bg-[#161616] py-42 px-27 text-xl hover:bg-white hover:text-black transition disabled:opacity-40 cursor-pointer">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14"/>
            <path d="m12 5 7 7-7 7"/>
          </svg>
        </button>
      </div>

      <!-- Contenedor del slider -->
      <div class="overflow-x-auto lg:overflow-hidden max-w-5xl mx-auto mt-6 scrollbar-hide">
        <div id="sliderNL" class="flex transition-transform duration-500 ease-in-out">
          {products.map((product) => (
            <div class="relative w-1/2 lg:w-1/3 flex-shrink-0 px-3 text-center">
              <a href={`/productos/${product.slug}`}>
                <div class="relative aspect-square hover:scale-105 w-full overflow-hidden bg-black rounded-lg shadow">
                  <img 
                    src={product.image} 
                    alt={product.title} 
                    class="w-full h-full object-cover"
                    loading="lazy"
                  />
                  <p class="absolute top-2 right-2 bg-white/80 text-black text-xs font-semibold px-2 py-1 rounded-md">
                    Novedad
                  </p>
                </div>

                <p class="mt-2 text-sm text-center truncate w-full">{product.title}</p>
                <p class="font-semibold text-sm">{product.price}</p>
              </a>

              <AddToCartButton client:load
                vinyl={{
                  id: product.id,
                  title: product.title,
                  artist: product.artist,
                  price: product.priceNumeric,  
                  img: product.image,
                  slug: product.slug,
                  stock: product.stock
                }}
              />
            </div>
          ))}
        </div>
      </div>
    </>
  ) : (
    <p class="text-center text-gray-400">No hay productos nuevos disponibles</p>
  )}
</section>

<div class="w-full h-[1px] bg-gradient-to-r from-transparent via-gray-400 to-transparent"></div>

<script is:inline>
const sliderNL = document.getElementById("sliderNL");
const btnLeftNL = document.getElementById("btn-leftNL");
const btnRightNL = document.getElementById("btn-rightNL");

if (sliderNL && btnLeftNL && btnRightNL) {
  let page = 0;
  const cardsVisible = 3;
  const totalCards = sliderNL.children.length;
  const totalPages = Math.ceil(totalCards / cardsVisible);

  function updateSliderNL() {
    const cardWidth = sliderNL.children[0].offsetWidth;
    sliderNL.style.transform = `translateX(-${page * cardWidth * cardsVisible}px)`;
    btnLeftNL.disabled = page === 0;
    btnRightNL.disabled = page === totalPages - 1;
  }

  btnLeftNL.addEventListener("click", () => {
    if (page > 0) { page--; updateSliderNL(); }
  });

  btnRightNL.addEventListener("click", () => {
    if (page < totalPages - 1) { page++; updateSliderNL(); }
  });

  updateSliderNL();
}
</script>